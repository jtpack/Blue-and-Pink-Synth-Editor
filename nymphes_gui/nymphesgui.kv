            radius: [sp(7)]

    ParamNameLabel:
        id: param_name_label
        text: 'TYPE'
        font_size: sp(root.name_label_font_size)

    ParamValueLabel:
        id: param_value_label1
        font_size: sp(11)
        text: 'BPM' if root.type_prop == 0 else 'LOW' if root.type_prop == 1 else 'HIGH' if root.type_prop == 2 else 'TRACK' if root.type_prop == 3 else ''

    ParamValueLabel:
        id: param_value_label2
        font_size: sp(11)
        text: "ON" if root.key_sync_prop == 1 else "OFF"

    Widget:
        size_hint: None, None
        width: root.width
        height: sp(root.height - param_name_label.height - param_value_label1.height - param_value_label2.height - root.padding[3])


