#:kivy 2.1.0
#:import C kivy.utils.get_color_from_hex
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import NoTransition kivy.uix.screenmanager.NoTransition

ScreenManager:
    MainScreen
    SettingsScreen
    ChordsScreen
    PresetLoadScreen
    PresetSaveScreen
    DemoModeScreen


<MainScreen@Screen>:
    name: 'main'

    canvas.before:
        Color:
            rgba: C('#092042FF')
        SmoothRectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: (root.height * 0.008, 0, root.height * 0.008, root.height * 0.008)
        spacing: root.height * 0.008
        corner_radius: root.height * 0.015

        # Top Bar
        TopBar:
            screen_name: root.name
            size_hint_y: 3/40
            corner_radius: root.height * 0.015

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 34/40
            corner_radius: root.height * 0.015
            orientation: 'horizontal'
            spacing: self.parent.spacing

            LeftBar:
                size_hint: 1/12, 1
                screen_name: root.name
                corner_radius: self.parent.corner_radius

            GridLayout:
                cols: 2
                spacing: self.parent.spacing
                corner_radius: self.parent.corner_radius

                # Top Row
                OscillatorControlSection:
                    screen_name: root.name
                    size_hint_y: 2/4
                    corner_radius: self.parent.corner_radius

                FilterControlSection:
                    screen_name: root.name
                    size_hint_y: 2/4
                    corner_radius: self.parent.corner_radius

                # Middle Row
                AmpControlSection:
                    screen_name: root.name
                    size_hint_y: 1/4
                    corner_radius: self.parent.corner_radius

                Lfo1ControlSection:
                    screen_name: root.name
                    size_hint_y: 1/5
                    corner_radius: self.parent.corner_radius

                # Bottom Row
                ReverbControlSection:
                    screen_name: root.name
                    size_hint_y: 1/4
                    corner_radius: self.parent.corner_radius

                Lfo2ControlSection:
                    screen_name: root.name
                    size_hint_y: 1/4
                    corner_radius: self.parent.corner_radius

        BottomBar:
            screen_name: root.name
            size_hint_y: 3/40
            corner_radius: root.height * 0.015


<SectionTitleLabel>:
    size_hint_y: None
    height: app.curr_height * app.curr_scaling * 1/16
    background_color: 0, 1, 0, 0.3
    color: C('#06070FFF') if app.nymphes_connected else C('#ECBFEBFF')
    font_size: self.height * 0.5
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    disabled: not app.nymphes_connected


<ParamNameLabel>:
    background_color: 1, 1, 0, 0.7
    color: C(self.text_color_string) if app.nymphes_connected else C('#ECBFEBFF')
    font_size: self.height * 1.0
    text_size: self.size
    halign: 'center'
    valign: 'middle'
    disabled: not app.nymphes_connected


