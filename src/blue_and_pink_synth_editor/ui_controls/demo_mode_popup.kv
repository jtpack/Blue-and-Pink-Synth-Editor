#:kivy 2.1.0
#:import C kivy.utils.get_color_from_hex

<DemoModePopup>:
    orientation: 'vertical'
    spacing: self.height * 1/48
#    padding: self.height * 1/48

    canvas.before:
        Color:
            rgba: C('#257CFFFF')
        SmoothRectangle:
            pos: self.pos
            size: self.size

    GeneralSectionBox:
        orientation: 'vertical'
        spacing: 0
        padding: self.height * 1/12

        GeneralLabel:
            size_hint_y: 1/2
            text: 'Blue and Pink Synth Editor is running in demo mode.'
            font_size: self.height * 0.5

        GeneralLabel:
            size_hint_y: 1/2
            text: 'It will stop working after 15 minutes.'
            font_size: self.height * 0.5


    GeneralSectionBox:
        orientation: 'vertical'
        spacing: 0
        padding: self.height * 1/12

        GeneralLabel:
            size_hint_y: 1/2
            font_size: self.height * 0.5
            color: C('092041FF')
            text: 'You can purchase an activation code at'

        WebsiteButtonLabel:
            size_hint_y: 1/2
            text_size: self.size
            font_size: self.height * 0.5
            halign: 'center'
            valign: 'middle'
            text: 'www.scottlumsden.com/blueandpinksyntheditor'
            color: C('092041FF')
            underline: True
            on_press: self.button_clicked()

    GeneralSectionBox:
        orientation: 'vertical'

        Widget:
            size_hint_y: 1/4

        GeneralLabel:
            size_hint_y: 1/2
            font_size: 0.3
            text: 'If you have an activation code, drag it onto the app window'

        Widget:
            size_hint_y: 1/4

<GeneralLabel@Label>:
    valign: 'middle'
    halign: 'center'
    text_size: self.size
    font_size: self.height * 0.45

<GeneralSectionBox@BoxLayout>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: C('#438EFEFF')
        SmoothRoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [self.height * 1/10]
