#:kivy 2.1.0
#:import C kivy.utils.get_color_from_hex

<DemoModePopup>:
    orientation: 'vertical'
    spacing: self.height * 1/48
#    padding: self.height * 1/48

    canvas.before:
        Color:
            rgba: C('#257CFFFF')
        SmoothRectangle:
            pos: self.pos
            size: self.size

    GeneralSectionBox:
        orientation: 'vertical'
        spacing: 0
        padding: self.height * 1/12

        GeneralLabel:
            size_hint_y: 1/2
            color: C('092041FF')
            text: 'Blue and Pink Synth Editor is running in demo mode'
            font_size: self.height * 0.5

        GeneralLabel:
            size_hint_y: 1/2
            color: C('21354FFF')
            text: "It will work for 15 minutes and then you'll need to quit and reopen it"
            font_size: self.height * 0.4


    GeneralSectionBox:
        orientation: 'vertical'
        spacing: 0
        padding: self.height * 1/12

        GeneralLabel:
            size_hint_y: 1/2
            font_size: self.height * 0.55
            color: C('0400FFFF')
            text: 'Purchase Blue and Pink Synth Editor at'

        WebsiteButtonLabel:
            size_hint_y: 1/2
            text: 'www.scottlumsden.com/blueandpinksyntheditor'
            on_release: app.open_website_url('https://www.scottlumsden.com/blueandpinksyntheditor')

    GeneralSectionBox:
        orientation: 'vertical'

        Widget:
            size_hint_y: 1/4

        GeneralLabel:
            font_size: self.height * 0.3
            color: C('092041FF')
            text: 'If you have an activation code file, drag it onto the app window'

        Widget:
            size_hint_y: 1/4
